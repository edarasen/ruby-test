<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Body</th>
            <th>Author</th>
            <th><%= link_to 'New Article', new_article_path%></th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.name %></td>
                <td><%= article.body %></td>
                <td><%= article.author %></td>
                <td><%= link_to 'Show', article_path(article.id)%></td>
                <td><%= link_to 'Edit', edit_article_path(article.id)%></td>
                <td><%= link_to 'Delete', delete_article_path(article.id), data: { "turbo-method": :delete }%></td>
            </tr>
        <% end %>
    </tbody>
</table>